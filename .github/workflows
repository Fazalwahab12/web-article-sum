name: Daily Article Update

on:
  schedule:
    - cron: '0 22 * * *'  # Runs at 10 PM UTC
  workflow_dispatch:       # Allows manual triggering
  push:
    branches: [ main ]    # Also run on pushes to main

jobs:
  update-articles:
    runs-on: ubuntu-latest
    steps:
      - name: Call Update Articles API
        id: update
        run: |
          echo "Starting article update at $(date)"
          response=$(curl -X GET ${{ secrets.VERCEL_URL }}/api/update-articles)
          echo "API Response: $response"
        env:
          VERCEL_URL: ${{ secrets.VERCEL_URL }}